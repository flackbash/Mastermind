<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/row_number"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:padding="@dimen/margin_normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center">
        </TextView>

        <LinearLayout
            android:id="@+id/all_slots_ll"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <GridLayout
                    android:id="@+id/hints_background_gl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:columnCount="3">

                    <ImageView
                        style="@style/hint_background"/>
                    <ImageView
                        style="@style/hint_background"/>
                    <ImageView
                        style="@style/hint_background"/>

                </GridLayout>

                <GridLayout
                    android:id="@+id/hints_foreground_gl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:columnCount="3">

                    <ImageView
                        style="@style/hint_foreground"/>
                    <ImageView
                        style="@style/hint_foreground"/>
                    <ImageView
                        style="@style/hint_foreground"/>

                </GridLayout>
            </RelativeLayout>

            <Space
                android:id="@+id/space"
                android:layout_width="@dimen/img_hint_tiny_size"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/slots_background_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        style="@style/slot_background"/>
                    <ImageView
                        style="@style/slot_background"/>
                    <ImageView
                        style="@style/slot_background"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/slots_foreground_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <ImageView
                        style="@style/slot_foreground"/>
                    <ImageView
                        style="@style/slot_foreground"/>
                    <ImageView
                        style="@style/slot_foreground"/>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</merge>