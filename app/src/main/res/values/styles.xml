<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="slot_background">
        <item name="android:layout_width">@dimen/img_slot_size</item>
        <item name="android:layout_height">@dimen/img_slot_size</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:src">@drawable/slot</item>
    </style>

    <style name="slot_background_small">
        <item name="android:layout_width">@dimen/img_slot_small_size</item>
        <item name="android:layout_height">@dimen/img_slot_small_size</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:src">@drawable/slot</item>
    </style>

    <style name="slot_background_tiny">
        <item name="android:layout_width">@dimen/img_slot_tiny_size</item>
        <item name="android:layout_height">@dimen/img_slot_tiny_size</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
        <item name="android:src">@drawable/slot</item>
    </style>


    <style name="slot_foreground">
        <item name="android:layout_width">@dimen/img_slot_size</item>
        <item name="android:layout_height">@dimen/img_slot_size</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <style name="slot_foreground_small">
        <item name="android:layout_width">@dimen/img_slot_small_size</item>
        <item name="android:layout_height">@dimen/img_slot_small_size</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="slot_foreground_tiny">
        <item name="android:layout_width">@dimen/img_slot_tiny_size</item>
        <item name="android:layout_height">@dimen/img_slot_tiny_size</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
    </style>


    <style name="hint_background">
        <item name="android:layout_width">@dimen/img_hint_size</item>
        <item name="android:layout_height">@dimen/img_hint_size</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:src">@drawable/slot</item>
    </style>

    <style name="hint_background_small">
        <item name="android:layout_width">@dimen/img_hint_small_size</item>
        <item name="android:layout_height">@dimen/img_hint_small_size</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
        <item name="android:src">@drawable/slot</item>
    </style>

    <style name="hint_background_tiny">
        <item name="android:layout_width">@dimen/img_hint_tiny_size</item>
        <item name="android:layout_height">@dimen/img_hint_tiny_size</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:src">@drawable/slot</item>
    </style>


    <style name="hint_foreground">
        <item name="android:layout_width">@dimen/img_hint_size</item>
        <item name="android:layout_height">@dimen/img_hint_size</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="hint_foreground_small">
        <item name="android:layout_width">@dimen/img_hint_small_size</item>
        <item name="android:layout_height">@dimen/img_hint_small_size</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
    </style>

    <style name="hint_foreground_tiny">
        <item name="android:layout_width">@dimen/img_hint_tiny_size</item>
        <item name="android:layout_height">@dimen/img_hint_tiny_size</item>
        <item name="android:layout_margin">0dp</item>
    </style>


    <style name="peg_source">
        <item name="android:layout_width">@dimen/img_slot_size</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <style name="peg_source_small">
        <item name="android:layout_width">@dimen/img_slot_small_size</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>


    <style name="row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <style name="row_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="row_tiny">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
    </style>

</resources>
