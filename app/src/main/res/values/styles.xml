<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="slot_background">
        <item name="android:layout_width">@dimen/img_slot_size</item>
        <item name="android:layout_height">@dimen/img_slot_size</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:src">@drawable/slot</item>
    </style>

    <style name="slot_foreground">
        <item name="android:layout_width">@dimen/img_slot_size</item>
        <item name="android:layout_height">@dimen/img_slot_size</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <style name="hint_background">
        <item name="android:layout_width">@dimen/img_hint_size</item>
        <item name="android:layout_height">@dimen/img_hint_size</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:src">@drawable/slot</item>
    </style>

    <style name="hint_foreground">
        <item name="android:layout_width">@dimen/img_hint_size</item>
        <item name="android:layout_height">@dimen/img_hint_size</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="source_pegs">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>>
    </style>

</resources>
